{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",                                       
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src", "public/uploads/dist"],
  "exclude": ["node_modules"]
}
